<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation.ManageProductFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/admin_product_panel_title"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_background"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.487"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView17">

                    <EditText
                        android:id="@+id/manageuser_search_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:background="@color/gray"
                        android:ems="10"
                        android:fontFamily="@font/poppins_medium"
                        android:hint="@string/home_text2"
                        android:inputType="text"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColorHint="@color/blue_gray"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/manageuser_search_btn"
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="2dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/search_icon"
                        tools:srcCompat="@drawable/search_icon" />
                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">


                    <LinearLayout
                        android:id="@+id/product_linearLayout_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        tools:layout_editor_absoluteX="-1dp">

                        <!-- Product Image -->
                        <ImageView
                            android:id="@+id/admin_product_image"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop" />

                        <!-- Product Details Title -->
                        <TextView
                            android:id="@+id/product_details_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Product Details"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- Product Description -->
                        <TextView
                            android:id="@+id/admin_product_detail_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="This is a detailed description of the product."
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/user_white_background"
                            android:elevation="3dp"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp"
                            >

                            <!-- Product Information -->
                            <TextView
                                android:id="@+id/product_information_title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text="Product Information"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_marginStart="10dp"/>

                            <!-- Product Information Details -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:orientation="vertical">

                                <!-- Price -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/textView24"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/admin_product_detail_price" />

                                    <TextView
                                        android:id="@+id/admin_product_detail_price"
                                        android:layout_width="109dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="TextView"
                                        android:textAlignment="viewEnd" />

                                </LinearLayout>

                                <!-- Category -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/textView25"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/admin_product_detail_category" />

                                    <TextView
                                        android:id="@+id/admin_product_category"
                                        android:layout_width="109dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="TextView"
                                        android:textAlignment="viewEnd" />

                                </LinearLayout>

                                <!-- Availability -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/textView26"
                                        android:layout_width="238dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/admin_product_detail_availability" />

                                    <TextView
                                        android:id="@+id/admin_product_detail_availability"
                                        android:layout_width="50dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/instock_background"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="TextView"
                                        android:textAlignment="center"
                                        android:textColor="@android:color/white" />

                                    <!-- In Stock label -->
                                    <TextView
                                        android:id="@+id/admin_product_stock_label"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="4dp"
                                        android:background="@drawable/instock_background"
                                        android:textColor="@android:color/white"
                                        android:visibility="gone" /> <!-- Initially set visibility to GONE -->

                                </LinearLayout>

                                <!-- Delivery Charge -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/textView28"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/admin_product_detail_delivery" />

                                    <TextView
                                        android:id="@+id/admin_product_delivery"
                                        android:layout_width="109dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="TextView"
                                        android:textAlignment="viewEnd" />

                                </LinearLayout>

                                <!-- SKU Identification -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:padding="10dp">

                                    <TextView
                                        android:id="@+id/textView30"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_medium"
                                        android:text="@string/admin_product_detail_id" />

                                    <TextView
                                        android:id="@+id/admin_product_detail_id"
                                        android:layout_width="109dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_regular"
                                        android:text="TextView"
                                        android:textAlignment="viewEnd" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Likes and Dislikes -->
                        </LinearLayout>
                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>